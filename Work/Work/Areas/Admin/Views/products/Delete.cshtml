@model Work.Models.product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Container styling */
    .dl-horizontal {
        color: black;
        max-width: 1000px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f4f4f4;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Header styling */
    h2 {
        color: #000;
        text-align: center;
    }

    /* List styling */
    .dl-horizontal {
        display: flex;
        flex-wrap: wrap;
    }

        .dl-horizontal dt,
        .dl-horizontal dd {
            flex: 0 0 50%;
            padding: 10px;
            box-sizing: border-box;
            border: 1px solid #ddd;
        }

        .dl-horizontal dt {
            font-weight: bold;
            text-align: center;
            background-color: #808080;
            color: #fff;
        }

        .dl-horizontal dd {
            background-color: #f8f8f8;
        }

    /* Action links styling */
    a.edit-button,
    a.back-button {
        display: inline-block;
        padding: 10px 20px;
        margin-right: 10px;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    a.edit-button {
        background-color: #808080;
    }

    a.back-button {
        background-color: #e53935;
    }

        /* Hover effect for action links */
        a.edit-button:hover,
        a.back-button:hover {
            filter: brightness(90%);
        }

    /* Confirmation message styling */
    h4 {
        color: #333;
        text-align: center;
        margin-top: 20px;
    }

    /* Form actions styling */
    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

    .btn-default {
        background-color: #d9534f;
        color: #fff;
        border: 1px solid #d9534f;
        border-radius: 5px;
        padding: 10px 20px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-default:hover {
            background-color: #c9302c;
        }
</style>


