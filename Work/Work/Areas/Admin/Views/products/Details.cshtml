                string relativeImagePath = Model.avatar;
                string absoluteImagePath = Url.Content("~/Content/client/" + relativeImagePath);
                <img src="@absoluteImagePath" height="100" width="100" alt="@Model.avatar" />
            }
        </dd>

        <dt>
