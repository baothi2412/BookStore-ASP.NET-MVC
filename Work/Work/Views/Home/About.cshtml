
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>


    #main-wrapper {
        text-align: center;
    }

    .section {
        padding: 30px 0;
    }

    .about-section {
        background-color: #474e5d;
        color: white;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    .column {
        width: 100%;
        padding: 0 15px;
        box-sizing: border-box;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        margin: 8px;
    }

    .team-area {
        padding: 100px 0;
    }

        .team-area .section-heading {
            margin-bottom: 80px;
        }

        .team-area .column {
            width: 33.33%;
            float: left;
            box-sizing: border-box;
        }

        .team-area .card {
            margin: 0;
        }

    .funfact-section {
        background-color: #fff;
    }

        .funfact-section .single-fact {
            padding: 30px;
        }

    .client-section {
        background-color: #f5f5f5;
        padding: 90px 0;
    }

    .client-slider {
        display: flex;
        justify-content: space-around;
    }

    h1 {
        color: orange;
        font-family: 'Agency FB';
        font-size: 50px;
    }

    .specific-paragraph {
        /* CSS styles chỉ áp dụng cho đoạn văn bản cụ thể */

        font-size: 20px;
    }
    /* Thêm đoạn CSS mới */
    .about-image img {
        transition: transform 0.3s ease-in-out, filter 0.3s ease-in-out;
    }

        .about-image img:hover {
            transform: scale(1.1); /* Thay đổi kích thước khi hover */
            filter: brightness(120%); /* Tăng độ sáng khi hover */
        }
    /* Thêm đoạn CSS mới */
    .button1 {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        background-color: #ff9800;
        color: #fff;
        border-radius: 5px;
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

        .button1:hover {
            background-color: #fff;
            color: #ff9800;
            transform: scale(1.05); /* Tăng kích thước khi hover */
        }
</style>

