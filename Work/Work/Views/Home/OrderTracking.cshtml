

    @using Work.Models;
    @{
        ViewBag.Title = "OrderTracking";
        List<order> orders = ViewData["listorder"] as List<order>;
    }

    <h2>OrderTracking</h2>
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-12 table-responsive bg-light p-30 mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>OrderID</th>
                            <th>DeliveryDate</th>
                            <th>OrderDate</th>
                            <th>ShipAddress</th>
                            <th>Note</th>
                            <th>Payment</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @{
                            foreach (order o in orders)
                            {
                                <tr>
                                    <td class="align-middle">@o.orderID</td>
                                    <td class="align-middle">@o.deliveryDate</td>
                                    <td class="align-middle">@o.orderDate</td>
                                    <td class="align-middle">@o.shipAddress</td>
                                    <td class="align-middle">@o.note</td>
                                    <td class="align-middle">Payment after Delivery</td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>